@using ITWorxCouurse.DAL.Entiities;
@model Products;
@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Price"></label>
        <input asp-for="Price" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" readonly />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

